<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Sale specific templates -->
  
  <template id="report_saleorder_document">
    <t t-call="brauns_ml_sale.external_layout">
      <t t-foreach="docs" t-as="doc">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <div id="field_return">
          <div id="field_return_extra" class="field_return_font">
            <p>Zusatz- und Vermerkszone</p>
          </div>
          <div id="field_return_addr" class="field_return_font">
            <p style="margin-bottom= 0;">Max Müller</p>
            <p style="margin-bottom= 0;">Firmenstraße 1</p>
            <p style="margin-bottom= 0;">45678 Muster</p>
          </div>
        </div>
      </t>
    </t>
  </template>
  
  <template id="sale.report_saleorder">
    <t t-call="brauns_ml_sale.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-call="brauns_ml_sale.report_saleorder_document" t-lang="doc.partner_id.lang" />
      </t>
    </t>
  </template>

  <!-- Content layout templates -->
  
  <template id="external_layout">
    <t t-if="not o" t-set="o" t-value="doc" />
    
    <t t-if="not company">
      <p>DEBUG: Company not set</p>
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id" />
      </t>
      <t t-elif="o and ('company_id' in o)">
        <t t-set="company" t-value="o.company_id.sudo()" />
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company" />
      </t>
    </t>
    <t t-else="else">
      <p>DEBUG: Company set</p>
    </t>
    <p t-field="company.external_report_layout_id.key"/>
  
    <!--
    <t t-if="company.external_report_layout_id"
       t-call="{{company.external_report_layout_id.key}}">
      <t t-raw="0" />
    </t>
    <t t-else="else"
       t-call="brauns_ml.external_layout_standard">
      <t t-raw="0" />
    </t>
    <t t-call="brauns_ml_sale.external_layout_standard">
      <t t-raw="0" />
    </t>
    -->
  </template>
  
  <template id="external_layout_standard">
    <div class="header">
      <div id="header_dina_logo">
        <img t-if="(company is not None) and company.logo" t-att-src="image_dara_uri(company.logo)" alt="Logo" />
      </div>
    </div>
  </template>
  
  <!-- Layout templates -->
  
  <template id="html_container">
    <t t-call="brauns_ml_sale.report_layout">
      <t t-raw="0" />
    </t>
  </template>

  <template id="report_layout" name="Report layout">
    &lt;!DOCTYPE html&gt;
    <html>
      <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title><t t-esc="title or 'Odoo Report'" /></title>
      
        <!-- TODO(joshua): -->
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300&amp;display=swap" rel="stylesheet" />
        <style>
          p {
            font-family: 'Source Sans Pro', sans-serif;
            line-height: 1.5;
            font-size: 12pt;
            margin-top: 0;
            margin-bottom: 0;
            padding: 0;
            border: 0;
          }
          
          div {
            position: absolute;
            margin: 0;
            padding: 0;
            border: 0;
          }
          
          #doc_din5008 {
            width: 100%;
            height: 200mm;
            margin: 0;
            padding: 0;
            border: 0;
            background-color: rgb(247, 247, 247);
          }
          
          .field_return_font {
            font-family: 'Source Sans Pro', sans-serif;
          }
        
          #field_return {
            height: 45mm;
            margin-top: 27mm;
            width:  85mm;
            margin-left: 10mm;
            background-color: rgb(149, 123, 190);
          }
        
          #field_return_extra {
            height: 12.7mm;
            margin-top: 5mm;
            width: 80mm;
            margin-left: 5mm;
            background-color: rgba(80, 80, 80, 0.35);
          }
      
          #field_return_addr {
            height: 27.3mm;
            margin-top: 17.7mm;
            width:  80mm;
            margin-left: 5mm;
            background-color: rgba(80, 80, 80, 0.2);
          }
        </style>
      </head>
      <body id="doc_din5008">
        <div id="wrapwrap">
          <main>
            <t t-raw="0"/>
          </main>
        </div>
      </body>
    </html>
  </template>
</odoo>