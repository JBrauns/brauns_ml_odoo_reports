<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Sale specific templates -->
  
  <template id="report_saleorder_document">
    <t t-call="brauns_ml_sale.external_layout">
      <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
      <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300&amp;display=swap" rel="stylesheet" />
      <style>        
        body, div, p, table, tr, td, .article {
          margin: 0;
          padding: 0;
          border: 0;
        }
      
        p, h1, h2, td, th {
          font-family: 'Source Sans Pro', Arial;
        }
        
        p, td {
          line-height: 1.5;
          font-size: 10pt;
        }
      
        h1 {
          font-size: 14pt;
        }
      
        h2 {
          font-size: 12pt;
        }
        
        table {
          border-spacing:0;
          border-collapse:collapse;
        }
        
        p:empty:before {
          content: ' ';
          white-space: pre;
        }
        
        div {
          position: absolute;
        }
        
        .article {
          width: 200mm;
          height: 68.46mm;
          margin-left: 0mm;
        }
          
        .div-wrapper {
          position: relative;
          width: 100%;
          height: 100%;
          /* background-color: rgb(244,184,184); */
        }
        
        .grey-box {
          /* background-color: rgb(197,197,197); */
        }
        
        #address-base {
          height: 45mm;
          margin-top: 0mm;
          width:  85mm;
          vertical-align: right;
          margin-left: 20mm;
        }

        #address-additional {
          height: 12.7mm;
          width:  80mm;
          top: 5mm;
          right: 0;
        }
        
        #address-additional p {
          font-size: 8pt;
        }

        #address-info {
          height: 27.3mm;
          width:  80mm;
          bottom: 0;
          right: 0;
        }

