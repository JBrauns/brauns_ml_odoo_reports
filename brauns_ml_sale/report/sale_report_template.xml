<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_saleorder_document">
    <t t-call="brauns_ml_sale.din5008_layout">
      <t t-foreach="docs" t-as="doc">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <div id="field_return">
          <div id="field_return_extra" class="field_return_font">
            <p>Zusatz- und Vermerkszone</p>
          </div>
          <div id="field_return_addr" class="field_return_font">
            <p style="margin-bottom= 0;">Max Müller</p>
            <p style="margin-bottom= 0;">Firmenstraße 1</p>
            <p style="margin-bottom= 0;">45678 Muster</p>
          </div>
        </div>
      </t>
    </t>
  </template>

  <!-- Overwrite the sales report ID -->
  <template id="sale.report_saleorder">
    <t t-call="brauns_ml_sale.din5008_layout">
      <t t-foreach="docs" t-as="doc">
        <t t-call="brauns_ml_sale.report_saleorder_document"
           t-lang="doc.partner_id.lang" />
      </t>
    </t>
  </template>

  <template id="din5008_layout" name="Report layout">&lt;!DOCTYPE html&gt;
    <html>
      <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>
          <t t-esc="title or 'Odoo Report'" />
        </title>
      
        <!-- TODO(joshua): -->
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300&amp;display=swap" rel="stylesheet" />
        <style>
          p {
            font-family: 'Source Sans Pro', sans-serif;
            line-height: 1.5;
            font-size: 12pt;
            margin-top: 0;
            margin-bottom: 0;
            padding: 0;
            border: 0;
          }
          
          div {
            position: absolute;
            margin: 0;
            padding: 0;
            border: 0;
          }
          
          #doc_din5008 {
            width: 100%;
            height: 200mm;
            margin: 0;
            padding: 0;
            border: 0;
            background-color: rgb(247, 247, 247);
          }
          
          .field_return_font {
            font-family: 'Source Sans Pro', sans-serif;
          }
        
          #field_return {
            height: 45mm;
            margin-top: 27mm;
            width:  85mm;
            margin-left: 10mm;
            background-color: rgb(149, 123, 190);
          }
        
          #field_return_extra {
            height: 12.7mm;
            margin-top: 5mm;
            width: 80mm;
            margin-left: 5mm;
            background-color: rgba(80, 80, 80, 0.35);
          }
      
          #field_return_addr {
            height: 27.3mm;
            margin-top: 17.7mm;
            width:  80mm;
            margin-left: 5mm;
            background-color: rgba(80, 80, 80, 0.2);
          }
        </style>
      </head>
      <body id="doc_din5008">
        <t t-raw="0" />
      </body>
    </html>
  </template>
</odoo>