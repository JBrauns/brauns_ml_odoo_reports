<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Sale specific templates -->
  
  <template id="report_saleorder_document">
    <t t-call="brauns_ml_sale.external_layout">
      <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
      <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300&amp;display=swap" rel="stylesheet" />
      <style>        
        body, div, p, .article {
          margin: 0;
          padding: 0;
          border: 0;
        }
      
        p {
          font-family: 'Source Sans Pro', Arial;
          line-height: 1.5;
          font-size: 11pt;
        }
        
        div {
          position: absolute;
        }
        
        .article {
          width: 180mm;
          height: 68.46mm;
          margin-left: 20mm;
        }
          
        .div-wrapper {
          position: relative;
          width: 100%;
          height: 100%;
          background-color: rgb(244,184,184);
        }
        
        .grey-box {
          background-color: rgb(197,197,197);
        }
        
        #address-base {
          height: 45mm;
          margin-top: 0mm;
          width:  85mm;
          vertical-align: right;
        }

        #address-additional {
          height: 12.7mm;
          width:  80mm;
          top: 5mm;
          right: 0;
        }
        
        #address-additional p {
          font-size: 8pt;
        }

        #address-info {
          height: 27.3mm;
          width:  80mm;
          bottom: 0;
          right: 0;
        }

        #sender-base {
          height: 55mm;
          width: 75mm;
          right: 10mm;
          top: 5mm;
        }

        #sender-info {
          min-height: 40mm;
          max-width: 75mm;
          top: 0;
          right: 0;
        }
      </style>
      <div id="address-base">
        <t t-set="cid" t-value="doc.company_id"/>
        <div class="div-wrapper">
          <div id="address-additional" class="grey-box">
            <t t-set="company_extra" t-value="' '.join((cid.name, cid.street, '|', cid.zip, cid.city))"/>
            <p><t t-esc="company_extra"/></p>
          </div>
          <div id="address-info" class="grey-box">
            <p>Max Müller</p> b
            <p>Firmenstraße 1</p>
            <p>45678 Muster</p>
          </div>
        </div>
      </div>
      <div id="sender-base">
        <div class="div-wrapper">
          <div id="sender-info" class="grey-box">
            <p>Ihr Zeichen: abc-01</p>
            <p>Ihre Nachricht vom: 2013-04-23</p>
            <p>Unser Zeichen: mihh-00</p>
            <p>Unsere Nachricht vom: 2013-04-16</p>
            <p></p>
            <p>Name: Christian Schmidtberger</p>
            <p>Telefon: 040 1234-5678</p>
          </div>
        </div>
      </div>
    </t>
  </template>
  
  <template id="sale.report_saleorder">
    <t t-call="brauns_ml_sale.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-call="brauns_ml_sale.report_saleorder_document" t-lang="doc.partner_id.lang" />
      </t>
    </t>
  </template>

  <!-- Content layout templates -->
  
  <template id="external_layout">
    <t t-if="not o" t-set="o" t-value="doc" />
    
    <t t-if="not company">
      <!-- Multicompany -->
      <t t-if="company_id">
        <t t-set="company" t-value="company_id" />
      </t>
      <t t-elif="o and ('company_id' in o)">
        <t t-set="company" t-value="o.company_id.sudo()" />
      </t>
      <t t-else="else">
        <t t-set="company" t-value="res_company" />
      </t>
    </t>
    
    <t t-call="brauns_ml_sale.external_layout_standard">
      <t t-raw="0" />
    </t>
  
    <!--
    <t t-if="company.external_report_layout_id"
       t-call="{{company.external_report_layout_id.key}}">
      <t t-raw="0" />
    </t>
    <t t-else="else"
       t-call="brauns_ml.external_layout_standard">
      <t t-raw="0" />
    </t>
    -->
  </template>
  
  <template id="external_layout_standard">
    <div id="dina-header" class="header clean-block">
      <style>
        body, .clean-block, #minimal_layout_report_headers {
          margin: 0;
          padding: 0;
          border: 0;
        }

        p { font-family: 'Source Sans Pro', sans-serif; }
  
        div {
          position: absolute;
          background-color: rgb(197,197,197);
        }
        
        #minimal_layout_report_headers {
          position: absolute;
          width: 100%;
          height: 100%;
        }
  
        .div-wrapper {
          position: relative;
          width: 100%;
          height: 100%;
          background-color: rgb(244,184,184);
        }
  
        #dina-header {
          position: relative;
          height: 32mm;
          width: 115mm;
        }
  
        #dina-header-logo {
          left: 20mm;
          bottom: 0mm;
        }
  
        #dina-header-logo img {
          display: block;
          max-height: 22mm;
          max-width: 105mm;
        }
        
        @import url('https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300&amp;display=swap')
      </style>
      
      <div class="div-wrapper clean-block">
        <div id="dina-header-logo" class="clean-block">
          <img t-if="(company is not None) and company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" />
        </div>
      </div>
    </div>
  
    <div class="article">
      <t t-raw="0" />
    </div>
  </template>
  
  <template id="web.minimal_layout">
    &lt;!DOCTYPE html&gt;
    <t t-raw="'&lt;base href=%s&gt;' % base_url" />
    <html>
      <head>
        <!-- TODO: What to put here? -->
        <meta charset="utf-8" />
        <t t-set="subst_needed" t-value="subs is True" />
        <t t-if="subst_needed">
          <script>
            function subst() {
              var vars = {};
              var x = document.location.search.substring(1).split('&amp;');
              for (var i in x) {
                  var z = x[i].split('=', 2);
                  vars[z[0]] = unescape(z[1]);
              }
              var x = ['sitepage', 'sitepages', 'section', 'subsection', 'subsubsection'];
              var z = {'sitepage': 'page', 'sitepages': 'topage'};
              for (var i in x) {
                  var y = document.getElementsByClassName(z[x[i]] || x[i])
                  for (var j=0; j&lt;y.length; ++j)
                      y[j].textContent = vars[x[i]];
              }

              var index = vars['webpage'].split('.', 4)[3];
              var header = document.getElementById('minimal_layout_report_headers');
              if(header !== null){
                  var companyHeader = header.children[index];
                  header.textContent = '';
                  header.appendChild(companyHeader);
              }
              var footer = document.getElementById('minimal_layout_report_footers');
              if(footer !== null){
                  var companyFooter = footer.children[index];
                  footer.textContent = '';
                  footer.appendChild(companyFooter);
              }
            }
          </script>
        </t>
      </head>
      <body t-att-onload="subst_needed and 'subst()'">
        <t t-raw="body"/>
      </body>
    </html>
  </template>
  
  <!-- Layout templates -->
  
  <template id="html_container">
    <t t-call="brauns_ml_sale.report_layout">
      <t t-raw="0" />
    </t>
  </template>

