          font-size: 10pt;
          padding-top: 3mm;
          padding-bottom: 3mm;
        }
      
        .table-parent {
          width: 100%;
        }
      
        .table-child-m2 {
          width: 50%;
          vertical-align: top;
        }
      
        .table-child-m2 table {
          width: 100%;
        }
      
        .table-child-m2 td {
          white-space:nowrap;
          padding-right: 3mm;
        }
      
        .table-child-m2 td:last-child {
          padding-right: 0;
          width: 100%;
        }
      
        #sales-table {
          margin-top: 10mm;
        }
      
        #sales-table td {
          line-height: 1;
          vertical-align: top;
        }
      
        #sales-table td:nth-child(1), td:nth-child(2), td:nth-child(3),
          th:nth-child(1), th:nth-child(2), th:nth-child(3) {
          text-align: left;
        }
      
        #sales-table td:nth-child(4), td:nth-child(6), td:nth-child(7),
          th:nth-child(4), th:nth-child(6), th:nth-child(7) {
          text-align: right;
        }
      
        #sales-table td:nth-child(5), th:nth-child(5) {
          text-align: center;
        }
      </style>
        
      <div id="text-base">
        <div class="div-wrapper">
          <h2>
            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
              <strong t-if="doc.state not in ['draft', 'sent']">Rechnung</strong>
              <strong t-if="doc.state in ['draft', 'sent']">Angebot</strong>
            </t>
            <t t-if="env.context.get('proforma', False) or is_pro_forma">
              <strong>Proformarechnung</strong>
            </t>
          </h2>
          
          <table class="table-parent">
            <tr>
              <td class="table-child-m2">
                <table>
                  <tr>
                    <td>Rechnungs-Nr.:</td>
                    <td><t t-esc="doc.name"/></td>
                  </tr>
                  <tr>
                    <td>Auftrags-Nr.:</td>
                    <td>O1727</td>
                  </tr>
                  <tr>
                    <td>Komission:</td>
                    <td>Bestellung Gerstner</td>
                  </tr>
                  <tr>
                    <td>Kunden-Nr.:</td>
                    <td>1068</td>
                  </tr>
                  <tr>
                    <td>Bestell-Nr.:</td>
                    <td>369852</td>
                  </tr>
                </table>
              </td>
              <td class="table-child-m2">
                <table>
                  <t t-if="doc.date_order">
                    <tr>
                      <td>Rechnungsdatum:</td>
                      <td><t t-esc="doc.date_order"/></td>
                    </tr>
                  </t>
                  <t t-if="doc.commitment_date">
                    <tr>
                      <td>Lieferdatum:</td>
                      <td><t t-esc="doc.commitment_date"/></td>
                    </tr>
                  </t>
                  <t t-if="doc.user_id.name">
                    <tr>
                      <td>Bearbeiter:</td>
