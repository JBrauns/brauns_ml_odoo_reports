          <table id="sales-table" class="table-parent">
			      <thead>
				      <tr>
			          <th name="th-item" class="text-left">Pos.</th>
                <th name="th-item-number" class="text-left">Art-Nr.</th>
                <th name="th-label" class="text-left">Bezeichnung</th>
                <th name="th-amount" class="text-right">Menge</th>
                <th name="th-unit" class="text-center">Einheit</th>
                <th name="th-unit-price" class="text-right">Preis/Einh.</th>
                <th name="th-total" class="text-right">Gesamt</th>
				      </tr>
			      </thead>
            <tbody>
              <t t-set="current_subtotal" t-value="0" />
              <t t-set="current_position" t-value="1" />

              <t t-foreach="doc.order_line" t-as="line">
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded" />
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included" />
                
                <t t-if="not line.display_type">
                  <tr>
                    <td name="td_quantity" class="text-left">
                      <span>
                        <t t-esc="current_position" />
                      </span>
                    </td>
                    <td name="td_product_id" class="text-left">
                      <span>
                        <t t-esc="line.product_id.code" />
                      </span>
                    </td>
                    <td>
                      <span>
                        <strong><t t-esc="line.product_id.name" /></strong><br/><t t-esc="line.product_id.description" />
                      </span>
                    </td>
                    <td>
                      <span t-field="line.product_uom_qty" />
                    </td>
                    <td name="td_quantity" class="text-center">
                      <span t-field="line.product_uom" groups="uom.group_uom" />
                    </td>
                    <td name="td_quantity" class="text-right">
                      <span t-esc="line.price_unit" t-options='{"widget": "float", "precision": 2}'/>
                    </td>
                    <td>
                      <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                      <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                    </td>
                  </tr>
                </t>

                <t t-if="current_section and (line_last or (doc.order_line[line_index + 1].display_type == 'line_section'))">
                  <tr>
                    <td colspan="4" id="id-section-subtotal"> </td>
                    <td colspan="2" id="id-section-subtotal" class="text-right bottom-border-single">Summe Netto</td>
                    <td id="id-section-subtotal" class="text-right bottom-border-single">
                      <span>
                        <t t-esc="' '.join((current_subtotal, doc.pricelist_id.currency_id))" />
                      </span>
                    </td>
                  </tr>
                </t>

                <t t-set="current_position" t-value="current_position + 1" />
              </t>

              <tr>
                <td colspan="4"> </td>
                <td colspan="2" style="text-align: right; padding-top: 12mm" class="bottom-border-single">Summe Netto</td>
                <td style="text-align: right; padding-top: 12mm" class="bottom-border-single">€ 186,99</td>
              </tr>
              <tr>
                <td colspan="4"> </td>
                <td colspan="2" style="text-align: right;" class="bottom-border-double">19,00% USt. auf 186,99</td>
                <td style="text-align: right;" class="bottom-border-double">€ 35,52</td>
              </tr>
              <tr>
                <td colspan="4"> </td>
                <td colspan="2" style="text-align: right;" class="bottom-border-single p-bold">Endsumme</td>
                <td style="text-align: right;" class="bottom-border-single p-bold">€ 222,51</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    </t>
  </template>
  
